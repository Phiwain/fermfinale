{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-12">
                <h1>Votre panier</h1>
                {% if selectedQuantity is defined %}
                    <p>Quantité sélectionnée : {{ selectedQuantity }}</p>
                {% else %}
                    <p>Aucune quantité sélectionnée.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
