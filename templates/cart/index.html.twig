{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1> Mon panier</h1>
        <div class="row">
            <div class="col-md-8">
                {% for item in cart %}
                    <div class="row mt-2">
                        <div class="col-md-2">
                            <img src="/uploads/{{ item.product.illustration }}" alt="{{ item.product.name }}" class="img-fluid">
                        </div>
                        <div class="col-md-6">
                            <strong>{{ item.product.name }}</strong>
                            <span class="d-block small">Prix au Kg: {{ item.product.price }} €</span>
                        </div>
                        <div class="col-md-2 text-right">
                            <span class="badge text-bg-secondary">x {{ item.quantity }} Kg</span>
                        </div>
                        <div class="col-md-2">
                            <strong>Prix: {{ (item.quantity * item.product.price) }} €</strong>
                            <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="btn btn-danger mt-2">Supprimer</a>
                        </div>

                    </div>
                {% endfor %}
            </div>
            <div class="col-md-4" style="background-color: #0D5127">
                <div class="p-3">
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total produit :</span>
                        <span>{{ fullCartQuantity }}</span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">Prix total :</span>
                        <span>{{ total|price }} €</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_order') }}" class="btn btn-light w-100 mt-3">Commander</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
