{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <h1>Récapitulatif de ma commande</h1>
        <div class="row">
            <div class="col-md-8">
                <div class=" p-3">
                    <strong class="mb-2">Contenu de votre panier:</strong> <br/>
                    {% for product in cart %}
                        <div class="row mt-2">
                            <div class="col-md-2">
                                <img src="/uploads/{{ product.illustration }}" class="img-fluid" alt="{{ product.name }}">
                            </div>
                            <div class="col-md-5">
                                <strong>{{ product.name }}</strong>
                                <span class="d-block small">Prix au Kg: {{ product.price }} €</span>
                            </div>
                            <div class="col-md-2 text-right">
                                <span class="badge text-bg-secondary">x {{ product.qty }} Kg</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Prix total: {{ (product.qty * product.price) }} €</strong>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class=" p-3 my-3">
                    <strong >Votre adresse:</strong>  <br/>
                    {{ choices.addresses.prenom }} {{ choices.addresses.nom }} <br/>
                    {{ choices.addresses.address }} <br/>
                    {{ choices.addresses.postal }} - {{ choices.addresses.city }}
                </div>
                <hr>
                <div class=" p-3">
                    <strong >Votre point de livraison:</strong> <br/>
                    {{ choices.carriers.name }} <br/>
                    {{ choices.carriers.address|raw}}
                </div>

            </div>
            <div class="col-md-4">
                <div class=" p-3">

                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">  Prix total de la commande :</span>
                        <span> {{ total|price }} €</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_order') }}" class="btn btn-light w-100 mt-3">Payer</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
