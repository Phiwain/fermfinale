{% extends 'base.html.twig' %}



{% block body %}
    <div class="container my-5">
        <h1>Espace membre</h1>
        <br/>
        <h5> Modification de mon mot de passe</h5>

    </div>
    <div class="container my-5">
        <div class="row align-items-center">
            <div class="col-md-3">
                {% include 'account/menu.html.twig' %}
            </div>
            <div class="col-md-9">
                <h5 class="d-flex justify-content-center"> Mes adresses</h5>
                <br/>
                {{form_start(addressForm)}}
                <div class="row">
                    <div class="col-md-6">{{ form_row(addressForm.nom) }}</div>
                    <div class="col-md-6">{{ form_row(addressForm.prenom) }}</div>
                    <div class="col-md-6">{{ form_row(addressForm.address) }}</div>
                    <div class="col-md-6">{{ form_row(addressForm.postal) }}</div>
                    <div class="col-md-6">{{ form_row(addressForm.city) }}</div>
                    <div class="col-md-6">{{ form_row(addressForm.phone) }}</div>

                </div>
                {{form_end(addressForm)}}
            </div>
        </div>


    </div>
{% endblock %}
